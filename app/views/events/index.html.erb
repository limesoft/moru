<div class="event-container">
  <div class="container_10 clearfix">
    <div class="grid_10">
      <% @events.each_with_index do |event, index| %>
        <% if index == 0 %>
          <%= render partial: 'application/event', locals: {event: @events.first.extend(GoingContext) } %>
          <ul id="event-list">
        <% else %>
          <%= render partial: 'events/event', locals: { event: event } %>
        <% end %>
      <% end %>
      </ul>
      <p id="back-top">
        <a href="#top"><span></span>Дээш очих</a>
      </p>
    </div>
  </div>
  <script>
    $(function(){
      infinity_pagination('<%= events_path %>', <%= @events.num_pages %>);
    });
  </script>
</div>
