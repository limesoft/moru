<div class="next-event2 clearfix">
	<div class="up"></div>
	<div class="event-left">
		<div class="event-location">
			<iframe width="430" height="140" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps/ms?msa=0&amp;msid=215856206744799561428.0004d34aca70dcfa12167&amp;ie=UTF8&amp;ll=47.924521,106.921113&amp;spn=0,0&amp;t=h&amp;output=embed"></iframe>
		</div>
		<div class="rsvp-label clearfix">
			<% if user_signed_in? %>
				<div class="ask-rsvp">
					<i class="rsvp-icon"></i>
					<span>Та очих уу?</span>
				</div>
				<div class="rsvp-select">
					<%= form_for Rsvp.new, remote: true do |f| %>
						<%= f.select :going,
												 options_for_select(
																 [['Та очих уу?', RSVP_NO_ANSWER],
																	['Тийм', RSVP_YES],
																	['Магадгүй', RSVP_MAYBE],
																	['Үгүй', RSVP_NO]], current_user.rsvp_of(current_event).try(:going)), {}, tabindex: 0, class: 'dk_container' %>
					<% end %>
				</div>
			<% end %>
		</div>
		<div class="social-links clearfix">
			<a href="javascript:void(0)" class="tweet-event"></a>
			<a href="javascript:void(0)" class="fb-event"></a>
			<a href="javascript:void(0)" class="gplus-event"></a>

			<span class="rsvp-count">
				Уулзалтанд <span><%= current_event.count_going %></span> хүн ирнэ
			</span>
		</div>

	</div>
	<div class="event-right clearfix">
		<div class="event-title"> <%= link_to current_event.title, event_path(current_event) %></div>
		<div class="event-info">
			<span><i class="date"></i><%= I18n.localize(current_event.date, format: :short) %> / 13 цагт</span>
			<span><i class="icon-location"></i>emphaty</span>
			<span><i class="comment"></i><%= current_event.comments_count %> сэтгэгдэл</span>
		</div>
		<div class="event-body">
			<%=raw(current_event.content) %>
		</div>
		<% unless current_event.topics.empty? %>
		<ul class="current_user_topic">
			<% current_event.topics.each do |topic| %>
				<li>
					<%= link_to truncate(topic.title, length: 35), topic_path(topic) %>
					<div class="vote"><i class="vote-icon"></i><span><%= topic.votes.voters.count%></span></div>
					<div class="comment"><i class="comment-icon"></i><span><%= topic.comments_count %></span></div>
				</li>
			<% end %>
		</ul>
		<% end %>
	</div>
</div>