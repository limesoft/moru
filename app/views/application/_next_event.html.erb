<aside class="next_event clearfix">
	<div class="container_10">
		<div class="grid_10">
			<div class="grid_5 alpha">
				<div class="event-box">
          <h2><%= current_event.title %></h2>
					<div class="separator clearfix"></div>
					<ul class="event-declare">
						<li><span><i class="icon-location"></i>EMPATHY ТӨВИЙН 4 ДАВХАРТ ЛЕКТОР ТӨВИЙН БАЙР</span></li>
            <li><span><i class="icon-time"></i><%= current_event.date.strftime("%H:%M") %> ЦАГТ</span></li>
					</ul>	
					<div class="event-calendar clearfix">

						<div class="cal-item">
							<span class="cal-item-left"></span>
							<span class="cal-item-center">
                <%= current_event.date.month %>
							</span>
							<span class="cal-item-right"></span>
						</div>

						<div class="cal-item">
							<span class="cal-item-left"></span>
							<span class="cal-item-center">
                <%= current_event.date.day %>
							</span>
							<span class="cal-item-right"></span>
						</div>

						<div class="cal-item last-item">
							<span class="cal-item-left"></span>
							<span class="cal-item-center">
									бямба
							</span>
							<span class="cal-item-right"></span>
						</div>

					</div>						
				</div>
			</div>
			<div class="grid_5 omega">
				<div class="event-box clearfix">
					<h2> яригдах сэдвүүд </h2>
					<ul class="event-topic">
						<li> <span> FRONT END DEVELOPMENT: +BAYARJA BUYANDELGER </span> </li>
						<li> <span> FRONT END DEVELOPMENT: +BAYARJA BUYANDELGER </span> </li>
						<li> <span> FRONT END DEVELOPMENT: +BAYARJA BUYANDELGER </span> </li>
						<li> <span> FRONT END DEVELOPMENT: +BAYARJA BUYANDELGER </span> </li>
					</ul>
					<div class="guest-tool">
            <%= form_for Rsvp.new, remote: true do |f| %>
              <%= f.hidden_field :event_id, value: 1 %>
              <%= f.select :going, options_for_select([['Та очих уу?', 0], ['Тийм', 1], ['Магадгүй', 2], ['Үгүй', 3]]), tabindex: 1 %>
						  <div class="member-count"><span>13</span></div>
            <% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</aside>
