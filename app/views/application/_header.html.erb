<header class="clearfix">
	<div class="container_10">
		<div class="grid_10">

			<!-- LOGO -->
			<a class="moru-logo"></a>

			<!-- LOGIN -->
			<% if user_signed_in? %>
				<nav class="social-logged">
					<ul>
						<li class="avatar"><%= image_tag(current_user.default_avatar) %></li>
						<li class="user_profile"><%= link_to truncate(current_user.name, length: 17), profile_path(current_user) %></li>
						<li class="logout"><%= link_to "", logout_path %></li>
					</ul>
				</nav>
			<% else %>
				<nav class="social-login">
					<a href="/auth/facebook">
        		<ul>
        			<li class="social-icon"><span class="social-facebook">&nbsp;</span></li>
        			<li class="login_btn"><span> Фейсбүүкээр нэвтрэх </span></li>
        		</ul>
        	</a>
				</nav>
			<% end %>

			<!-- MAIN MENU -->
			<nav class="main-menu">
				<ul>
		      <%= link_to_page "Эхлэл", root_path, "home" %>
		      <%= link_to_page "Блог", posts_path, "posts" %>
		      <%= link_to_page "Уулзалт", events_path, "events" %>
		      <%= link_to_page "Сэдэв", topics_path, "topics" %>
				</ul>
			</nav>
		</div>
	</div>
</header>
