<div class="post-item">
  <div class="post-img"> if image is available then is here </div>
	<div class="post-content">
    <h2><%= post.title %></h2>
    <span><%= post.user.try(:name) %> // <%= time_ago_in_words post.created_at %> өмнө нийтэлсэн </span>
		<div class="separator"></div>
		<div class="post-text"><%= raw(post.content) %></div>

		<div class="post-tool clearfix">
      <a href="javascript:void(0)" class="comment-count"><i class="comment-icon"></i><%= post.comments_count %> сэтгэгдэлтэй </a>
      <%= link_to 'Дэлгэрэнгүй', post_path(post), class: 'post-more' %>
		</div>
	</div>
</div>
