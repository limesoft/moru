<!DOCTYPE html>
<html>
<head>
  <title>MORU: Mongolian Rubyist</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= favicon_link_tag "favicon.ico" %>
  <%= csrf_meta_tags %>

  <%= yield :head %>
</head>
<body>

  <!-- ANNOUNCEMENTS -->
  <% Announcement.current(cookies.signed[:hide_announcement_ids]).each do |announcement| %>
    <%= div_for announcement do %>
      <%= announcement.message %>&nbsp;&nbsp;
      [&nbsp;<%= link_to "нуух", hide_announcement_path(announcement), remote: true %>&nbsp;]
    <% end %>
  <% end %>

  <!-- HEADER -->
	<%= render 'header' %>	

  <!-- CONTAINER -->
	<%= yield %>

  <!-- FOOTER -->
	<%= render 'footer' %>

  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-37957373-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
  </script>
</body>
</html>
